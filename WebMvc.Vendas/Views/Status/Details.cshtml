@model WebMvc.Vendas.Models.Status
@{
	ViewData["Title"] = "Detalhes do status";
}

<h6 id="titulo">@ViewData["Title"] código @Html.DisplayFor(model => model.Id)</h6>

<h6 id="divisor">Dados do status</h6>
<div id="espacador">
	<dl class="row">
		<dt id="espacador">Nome Status </dt>
		<dd id="espacador">
			@Html.DisplayFor(model => model.NomeStatus)
		</dd>
	</dl>
</div>

<div>
	<a asp-action="Edit" class="btn btn-info" asp-route-id="@Model.Id">Editar</a>
	<a asp-action="Index" class="btn btn-warning">Fechar</a>
</div>
