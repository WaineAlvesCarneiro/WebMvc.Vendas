@model WebMvc.Vendas.Models.PedidoViewModel
@{
	ViewData["Title"] = "Excluir o pedido";
}
<h6 id="titulo">Tem certeza que deseja @ViewData["Title"] código @Html.DisplayFor(model => model.Pedido.Id)</h6>

<h6 id="divisor">Dados do pedido</h6>
<div id="espacador">
	<dl class="row">
		<dt id="espacador">Data emissão</dt>
		<dd id="espacador">
			@Html.DisplayFor(model => model.Pedido.DataPedido)
		</dd>
		<dt id="espacador">Status </dt>
		<dd id="espacador">
			@Html.DisplayFor(model => model.Pedido.Status.NomeStatus)
		</dd>
		<dt id="espacador">Cliente </dt>
		<dd id="espacador">
			@Html.DisplayFor(model => model.Pedido.Cliente.Nome)
		</dd>
		<dt id="espacador">RCA </dt>
		<dd id="espacador">
			@Html.DisplayFor(model => model.Pedido.Rca.Nome)
		</dd>
		<dt id="espacador">Total </dt>
		<dd id="espacador">
			@Html.DisplayFor(model => model.Pedido.TotalPedido)
		</dd>
	</dl>
</div>
<h6 id="divisor">Lista de produtos</h6>
<div id="espacador">
	<table class="table table-hover">
		<thead>
			<tr class="table-success">
				<th>Código</th>
				<th>Produto</th>
				<th>Quantidade</th>
				<th>Valor Item</th>
				<th>Total Item</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var obj in Model.Itemes)
			{
				<tr class="table-active">
					<td>
						@Html.DisplayFor(modelItem => obj.Id)
					</td>
					<td>
						@Html.DisplayFor(modelItem => obj.Produto.Nome)
					</td>
					<td>
						@Html.DisplayFor(modelItem => obj.QuantidadeItem)
					</td>
					<td>
						@Html.DisplayFor(modelItem => obj.PrecoItem)
					</td>
					<td>
						@Html.DisplayFor(modelItem => obj.TotalItem)
					</td>
				</tr>
			}
		</tbody>
	</table>
	<form asp-action="Delete">
		<input type="hidden" asp-for="Pedido.Id" />
		<input type="submit" value="Excluir" class="btn btn-danger" />
		<a asp-action="Index" class="btn btn-warning">Cancelar</a>
	</form>
</div>
