@model WebMvc.Vendas.Models.Produto

@{
    ViewData["Title"] = "Editar produto";
}

<h6 id="titulo">@ViewData["Title"] código @Html.DisplayFor(model => model.Id)</h6>

<div id="espacador">
    <form asp-action="Edit" autocomplete="off" >
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <h6 id="divisor">Dados do produto</h6>
            <label id="espacador">Nome <input autofocus asp-for="Nome" /></label>
            <label id="espacador">Preço <input asp-for="Preco" data-val=false /></label>
            <label id="espacador">Fornecedor <select asp-for="FornecedorId" asp-items="ViewBag.FornecedorId" style="width:300px;"></select></label>
        </div>
        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-success" />
            <a asp-action="Index" class="btn btn-warning">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
